span.logo {
  margin: 0;
  padding: 0;
  width: 202px;
  height: 38px;
  display: block;
  background: url(<%= path_to_image 'logo.png' %>) no-repeat 0 0;
  font: 0/0 a;
  text-shadow: none;
  color: transparent;
}

.main{
  min-height:300px;
}

/* =footer */

.ffooter {
  margin: 35px 0 0 0;
  padding: 14px 0px 7px 0px;
  border-top: 2px solid #141414;
  background: #000;
  background: url(<%= path_to_image 'bgfooter.png' %>);
  color: #fff;


  -webkit-border-radius: 4px;
  -moz-border-radius: 4px;
  border-radius: 4px;
  -webkit-box-shadow: inset 0 1px 1px rgba(0, 0, 0, 0.05);
  -moz-box-shadow: inset 0 1px 1px rgba(0, 0, 0, 0.05);
  
}

.ffooter{
  .last-credit {
  padding-right: 10px;
  text-align: right;
  }
  .first-credit{
    padding-left:10px;
  }
}

.ffooter a {
  color: #fff;
  text-decoration: none;
}

.ffooter a:hover {
  -webkit-text-shadow: 0px 2px 15px rgba(255, 255, 255, 0.9);
  -moz-text-shadow: 0px 2px 15px rgba(255, 255, 255, 0.9);
  text-shadow: 0px 2px 15px rgba(255, 255, 255, 0.9);
}